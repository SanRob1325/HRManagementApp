<%= form_with(model: employee, local:true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :position, style: "display: block" %>
    <%= form.text_field :position,class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :department, style: "display: block" %>
    <%= form.text_field :department, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :salary, style: "display: block" %>
    <%= form.number_field :salary, step: 0.01,class: "form-control" %>
  </div>
  <div>
    <%= form.submit  class: 'btn btn-primary'%>
  </div>
<% end %>
