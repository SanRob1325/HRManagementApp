<div class="container mt-5">
  <div class="text-center">
    <h2 class="mb-text-primary">Employee List</h2>
    <%= link_to "Add New Employee",new_employee_path, class:"btn btn-primary mb-4" %>
  </div>
</div>


<table class="table table-hover table-bordered shadow-sm">
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Position</th>
      <th>Department</th>
      <th>Salary</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.email %></td>
      <td><%= employee.position %></td>
      <td><%= employee.department %></td>
      <td><%= employee.salary %></td>
      <td><%= number_to_currency(employee.salary) %>"</td>
      <td>
        <%= link_to 'Edit', edit_employee_path(employee),class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Delete', employee,method: :delete,data:{confirm: 'Are you sure you want to delete the employee?'},class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>