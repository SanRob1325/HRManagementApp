<h2>Departments</h2>
<% if @departments.any? %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= department.description %></td>
      <td>
        <%= link_to "Show", department_path(department), class: 'btn btn-info'%>
        <%= link_to "Edit", edit_department_path(department),class:  'btn btn-warning'%>
        <%= link_to "Delete", department_path(department), method: :delete, data: {confirm: 'Are you sure'}, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<p>No Departments found. <%= link_to 'Create one', new_department_path,class: 'btn btn-primary' %></p>
<% end %>
<%= link_to 'New Department', new_department_path, class: 'btn btn-primary' %>
